#include<iostream>
using namespace std;
struct node{
    int data;
    node *next;
    node(int x)
    {
        data=x;
        next=NULL;
    }
};
void print_list(node *head)
{
    node *pointer=head;   // created a node pointer to store an
    while(pointer!=NULL)
    {
        cout<<pointer->data<<" ";
        pointer=pointer->next;
    }
}
int main()
{
    node *head=new node(10);    //creating a pointer to object in heap 
    node *p2=new node(20);    // constructor is called in this case  the next which will store address of next node
    node *p3=new node(30);   //is having NULL data.
    node *p4=new node(40);
    head->next=p2;   // now address of while p2 pointer is store in next section of node in  p1
    p2->next=p3;   // same in this case address of pointer p3 is stored in next section of node in p2
    p3->next=p4;
    print_list(head);
}
